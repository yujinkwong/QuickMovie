<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Ticket Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_payment_successful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Movie Ticket"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="#000000" />

        <!-- Movie and User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username: JohnDoe"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_movie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie: Venom 2"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_time_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 8:00 PM, 10 Jan 2025"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_seat_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seats: A1, A2, A3"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price: RM 45.00"
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- QR Code Section -->
        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="QR Code"
            android:background="#F3F3F3"
            android:padding="8dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Done Button -->
    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
</LinearLayout>
