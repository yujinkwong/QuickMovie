<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Top Menu Bar -->
    <LinearLayout
        android:id="@+id/topbarfood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:padding="8dp">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menubarfood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menubar"
            android:contentDescription="Menu Icon"
            android:layout_gravity="center_vertical" />

        <!-- Title -->
        <TextView
            android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOOD AND BEVERAGES"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Scrollable Food and Beverage Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Popcorn Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popcorn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Popcorn Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="8dp"
                android:background="#F9F9F9"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Image -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Popcorn Image"
                    android:src="@drawable/popcorn" />

                <!-- Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popcorn"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: RM 5.00"
                        android:textColor="#FF5722"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_popcorn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv_quantity_popcorn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_minus_popcorn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <!-- Drinks Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp" />

            <!-- Coca-Cola Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginBottom="8dp"
                android:background="#F9F9F9"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Image -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="104dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Coca-Cola Image"
                    android:src="@drawable/drink" />

                <!-- Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coca-Cola"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Price: RM 2.50"
                        android:textColor="#FF5722"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_drink"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv_quantity_drink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_minus_drink"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Total Price -->
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: $0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#E0E0E0" />
</LinearLayout>
