<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Menu Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:padding="8dp">

        <!-- Menu Icon -->
        <ImageButton
            android:id="@+id/menubarprofile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/menubar"
            android:scaleType="fitXY"
            android:contentDescription="Menu Icon"
            android:layout_gravity="center_vertical" />

        <!-- Profile Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Carousel Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <!-- ViewPager2 for Image Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="200dp"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Now Showing Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now Showing"
        android:textSize="18sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:background="#E3E3E3" />

    <!-- Movies Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Movie 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F9F9F9"
                android:clickable="true"
                android:focusable="true">

                <!-- Movie Poster -->
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/venomposter"
                    android:scaleType="fitXY"
                    android:contentDescription="Movie 1 Poster" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VENOM: LET THERE BE CARNAGE"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18+ | Action, Drama | 1h 37m | English"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Movie 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F9F9F9"
                android:clickable="true"
                android:focusable="true">

                <!-- Movie Poster -->
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/sonic3"
                    android:scaleType="fitXY"
                    android:contentDescription="Movie 2 Poster" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SONIC THE HEDGEHOG 3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Action| 1h 50m | English"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Movie 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F9F9F9"
                android:clickable="true"
                android:focusable="true">

                <!-- Movie Poster -->
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/sinchan"
                    android:scaleType="fitXY"
                    android:contentDescription="Movie 3 Poster" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CRAYON SINCHAN:DINOSOUR DIARY"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animation| 1h 46m | Japanese"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Movie 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F9F9F9"
                android:clickable="true"
                android:focusable="true">

                <!-- Movie Poster -->
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/wicked"
                    android:scaleType="fitXY"
                    android:contentDescription="Movie 5 Poster" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wicked"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fantasy| 2h 39m | English"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
